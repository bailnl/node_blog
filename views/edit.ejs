<%- include header %>
<form method="post">
    标题：<br/>
    <input type="text" name="title" value="<%= post.title %>" disabled="disabled"/><br/>
    标签：
    <input type="text" value="<%= post.tags[0] %>" disabled="disabled" name="tag1"/>
    <input type="text" value="<%= post.tags[1] %>" disabled="disabled" name="tag2"/>
    <input type="text" value="<%= post.tags[2] %>" disabled="disabled" name="tag3"/><br/>
    正文：<br/>
    <textarea name="post" rows="20" cols="100"><%= post.post %></textarea><br/>
    <input type="submit" value="保存修改"/>
</form>
<%- include footer %>